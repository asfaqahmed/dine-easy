{
  "name": "Order",
  "type": "object",
  "properties": {
    "customer_id": {
      "type": "string",
      "description": "Reference to customer who placed the order"
    },
    "customer_name": {
      "type": "string",
      "description": "Customer name for quick reference"
    },
    "customer_phone": {
      "type": "string",
      "description": "Customer phone for notifications"
    },
    "table_number": {
      "type": "string",
      "description": "Table number or 'takeaway'"
    },
    "items": {
      "type": "array",
      "description": "Ordered items with quantities",
      "items": {
        "type": "object",
        "properties": {
          "menu_item_id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "price": {
            "type": "number"
          },
          "quantity": {
            "type": "number"
          },
          "total": {
            "type": "number"
          },
          "special_instructions": {
            "type": "string"
          }
        }
      }
    },
    "total_amount": {
      "type": "number",
      "description": "Total order amount in LKR"
    },
    "status": {
      "type": "string",
      "enum": [
        "pending",
        "confirmed",
        "preparing",
        "ready",
        "delivered",
        "cancelled"
      ],
      "default": "pending",
      "description": "Current order status"
    },
    "payment_status": {
      "type": "string",
      "enum": [
        "pending",
        "paid",
        "failed",
        "refunded"
      ],
      "default": "pending",
      "description": "Payment status"
    },
    "payment_id": {
      "type": "string",
      "description": "PayHere payment reference"
    },
    "order_type": {
      "type": "string",
      "enum": [
        "dine-in",
        "takeaway"
      ],
      "default": "dine-in"
    },
    "estimated_ready_time": {
      "type": "string",
      "format": "date-time",
      "description": "When order will be ready"
    },
    "special_requests": {
      "type": "string",
      "description": "Any special requests from customer"
    }
  },
  "required": [
    "customer_id",
    "customer_name",
    "customer_phone",
    "items",
    "total_amount"
  ]
}