{
  "name": "Table",
  "type": "object",
  "properties": {
    "table_number": {
      "type": "string",
      "description": "Unique table identifier"
    },
    "seats": {
      "type": "number",
      "description": "Number of seats at this table"
    },
    "qr_code": {
      "type": "string",
      "description": "Generated QR code for this table"
    },
    "status": {
      "type": "string",
      "enum": [
        "available",
        "occupied",
        "reserved",
        "maintenance"
      ],
      "default": "available"
    },
    "current_order_id": {
      "type": "string",
      "description": "ID of current order if table is occupied"
    }
  },
  "required": [
    "table_number",
    "seats"
  ]
}